<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Open_Hands"
             xmlns:viewmodels="clr-namespace:Open_Hands.ViewModels"
             xmlns:model="clr-namespace:Open_Hands.Models"
             x:Class="Open_Hands.Views.HomePage">
    <ContentPage.BindingContext>
        <viewmodels:HomeViewModel/>
    </ContentPage.BindingContext>
    <Shell.SearchHandler Keyboard="Default">
        <controls:EventSearchHandler Placeholder ="Search by city or state..."/>
    </Shell.SearchHandler>
    
    <ContentPage.Content>
        <StackLayout>
        <Button Text="Create An Event" VerticalOptions="Start" Command="{Binding CreateEventCommand}"/>
            <ListView ItemsSource="{Binding Events}">
                <!--<ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding EventName}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>-->
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>